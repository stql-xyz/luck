/* pages/home/home.wxss */
.card {
  margin: 20px;
  padding: unset 20px 5px 20px;
  overflow: hidden;
  text-align: center;
  background: var(--white);
}
.card .image {
  width: 80vw;
  margin: 10px auto;
  height: 160px;
  vertical-align: middle;
}
.prize-title {
  text-align: left;
  border-top: var(--border-1);
  padding: 10rpx 40rpx;
  font-weight: bolder;
}
.bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 40rpx;
  border-bottom: var(--border-1);
}
.bottom .left {
  display: flex;
  align-items: center;
}
.bottom .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 50rpx;
  box-shadow: var(--shadow-avatar);
}
.bottom .name {
  font-size: var(--font-size-2);
}
.bottom .right {
  background: var(--font-red);
  color: #FFFFFF;
  font-weight: 300;
  font-size: var(--font-size-2);
  border-radius: 40rpx;
  padding: 6rpx var(--space-4);
}
.bottom .join {
  background: rgba(250, 81, 81, 0.6);
}